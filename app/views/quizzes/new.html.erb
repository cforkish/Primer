<% provide(:title, 'New Quiz') %>
<h1>Create New Quiz</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@quiz, url: quizzes_path) do |f| %>
      <%= render 'fields', f: f %>
      <%= f.submit "Add Quiz", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
