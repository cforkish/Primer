
<div class="form-group lesson">

  <%= f.label :name, class: 'col-md-2 control-label' %>
  <div class='col-md-10'>
    <%= f.text_field :name, class: 'form-control'  %>
  </div>

  <%= f.label :link, class: 'col-md-2 control-label' %>
  <div class='col-md-10'>
    <%= f.text_field :link, class: 'form-control'  %>
  </div>

  <%= hidden_field_tag 'quiz', @quiz.id %>

  <div class='col-md-1'>
    <div class="remove_field btn btn-mini btn-danger form-control">Remove</div>
  </div>

</div>
