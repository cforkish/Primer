<% provide(:title, 'New Question') %>
<h1>Add a question to "<%= @quiz.name %>"</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for [@quiz, @question] do |f| %>
      <%= render 'fields', f: f %>
      <%= f.submit "Add Question", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>