<% provide(:title, @question.quiz.name + '::' + @question.question) %>
<div class="row">

  <h1>
    <%= @question.question %>
  </h1>

  <div class="col-md-4 col-md-offset-2">
    <h2 style="text-align:left;">Answers:</h2>

    <ul class="answers">
      <%= render @question.answers %>
    </ul>

  <%= link_to 'Remove', quiz_question_path(@quiz, @question), :confirm => 'Are you sure you want to remove this question?', :method => :delete %>
  </div>

  <div class="col-md-6">
    <h2 style="text-align:left;">References:</h2>

    <ul class="references">
      <%= render @question.lessons %>
    </ul>
  </div>

</div>
