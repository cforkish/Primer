<% provide(:title, @category.name) %>
<div class="row">
  <% @category.parents.each do |parent| %>
    <%= link_to "&uparrow;".html_safe + parent.name, category_path(parent) %>
  <% end %>

  <h1>
    <%= @category.name %>
  </h1>

  <section class="span4 offset1">
    <h2 style="text-align:left;">Content:</h2>

    <% if @category.concepts.count > 0 %>
      <ul class="concepts">
        <%= render @category.concepts %>
      </ul>
    <% else %>
      <p>No Content</p>
    <% end %>

      <%= link_to "+ Add Concept", new_concept_path(category: @category) %>
  </section>

  <section class="span4">
    <h2 style="text-align:left;">Subcategories:</h2>
    <% if @category.children.count > 0 %>
      <ul class="categories">
        <%= render @category.children %>
      </ul>
    <% else %>
      <p>No Subcategories</p>
    <% end %>

      <%= link_to "+ Add Subcategory", new_category_path(parent: @category) %>
    </section>

  <section class="span3">
    <h2 style="text-align:left;">Friend Categories:</h2>
    <% if @category.friends.count > 0 %>
      <ul class="friends">
        <%= render @category.friends %>
      </ul>
    <% else %>
      <p>No Friend Categories</p>
    <% end %>

      <%= link_to "+ Add Friendship", new_category_friend_path(@category) %>
    </section>

</div>
